<%= form_with  model:Comment.new do |form| %>
      <div class="field">
       <%= form.text_field :commentes %>
      </div>
      <br>
      <div>
         <%= form.hidden_field :post_id, value: post.id%>
      </div>
      <div class="field">

      <%=form.file_field :image%>
      <br>
      </div>
       

      <div class="actions">
       <%= form.submit %>
      </div>
      <br>
<%end%>  
